<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <About>
    <Summary>Phase 1.5: Handoff Mechanics</Summary>
  </About>
  
  <ServerSection>
    <ServerInitialConditions>
        <Time>
            <StartTime>6000</StartTime>
            <AllowPassageOfTime>false</AllowPassageOfTime>
        </Time>
    </ServerInitialConditions>
    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,220*1,5*3,2;3;,biome_1"/>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <!-- AGENT 0: The Miner -->
  <AgentSection mode="Survival">
    <Name>MinerBot</Name>
    <AgentStart>
      <!-- Facing East (-90) -->
      <Placement x="-2.5" y="227" z="0" yaw="-90"/>
      <Inventory>
        <InventoryItem slot="0" type="diamond"/>
      </Inventory>
    </AgentStart>
    <AgentHandlers>
      <ContinuousMovementCommands/>
      <InventoryCommands/>
      <ObservationFromFullStats/>
      <ObservationFromFullInventory/> <!-- ADDED THIS -->
      <ObservationFromNearbyEntities>
        <Range name="entities" xrange="10" yrange="2" zrange="10"/>
      </ObservationFromNearbyEntities>
    </AgentHandlers>
  </AgentSection>

  <!-- AGENT 1: The Collector -->
  <AgentSection mode="Survival">
    <Name>CollectorBot</Name>
    <AgentStart>
      <!-- Facing West (90) -->
      <Placement x="2.5" y="227" z="0" yaw="90"/>
    </AgentStart>
    <AgentHandlers>
      <ContinuousMovementCommands/>
      <InventoryCommands/>
      <ObservationFromFullStats/>
      <ObservationFromFullInventory/> <!-- CRITICAL ADDITION -->
      <ObservationFromNearbyEntities>
         <Range name="entities" xrange="10" yrange="2" zrange="10"/>
      </ObservationFromNearbyEntities>
      <ObservationFromGrid>
          <Grid name="floor3x3">
            <min x="-1" y="-1" z="-1"/>
            <max x="1" y="-1" z="1"/>
          </Grid>
      </ObservationFromGrid>
    </AgentHandlers>
  </AgentSection>
</Mission>